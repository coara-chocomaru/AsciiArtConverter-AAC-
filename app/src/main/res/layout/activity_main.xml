<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/filePathView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ファイルパスがここに表示されます"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    
    <Button
        android:id="@+id/selectTxtFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TXTファイルを選択"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/selectColorFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RGBカラーDATファイルを選択"
        android:layout_marginBottom="16dp"/>

    
    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TXTを画像に変換"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/convertWithColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RGBを画像に復元"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
